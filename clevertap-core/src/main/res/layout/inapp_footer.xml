<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/footer_frame_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_gravity="bottom"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/footer_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/footer_linear_layout_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/footer_linear_layout_height"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/footer_icon"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp" />

            <LinearLayout
                android:id="@+id/footer_linear_layout_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/footer_linear_layout_height"
                android:paddingStart="14dp"
                android:paddingEnd="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/footer_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/footer_title_height"
                    android:layout_marginTop="14dp"
                    android:maxLines="1"
                    android:textSize="@dimen/txt_size_inapp_footer_title"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/footer_message"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/footer_message_height"
                    android:layout_marginTop="4dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="@dimen/txt_size_min_inapp_footer_message"
                    app:autoSizeMaxTextSize="@dimen/txt_size_max_inapp_footer_message"
                    app:autoSizeStepGranularity="@dimen/size_granularity_footer_message" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/footer_linear_layout_3"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_below="@id/footer_linear_layout_1"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/footer_button_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="2dp"
                android:textSize="@dimen/txt_size_inapp_footer_button"
                android:visibility="gone" />

            <Button
                android:id="@+id/footer_button_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="2dp"
                android:textSize="@dimen/txt_size_inapp_footer_button"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>