<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#efefef"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2">


            <TextView
                android:id="@+id/btParse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:background="@drawable/bg_btn"
                android:gravity="center"
                android:padding="8dp"
                android:text="parse variables pt1"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/btDefineVars"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:background="@drawable/bg_btn"
                android:gravity="center"
                android:padding="8dp"
                android:text="define variables pt1"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/btCheckLocal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:background="@drawable/bg_btn"
                android:gravity="center"
                android:padding="8dp"
                android:text="check current data"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/btRequestWzrkFetch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:background="@drawable/bg_btn"
                android:gravity="center"
                android:padding="8dp"
                android:text="request wzrk fetch"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/btSync"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:background="#E91E63"
                android:gravity="center"
                android:padding="8dp"
                android:text="send local vars to server"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/btNextActivity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:background="#000"
                android:gravity="center"
                android:padding="8dp"
                android:textStyle="bold"
                android:text="Go to next activity >>"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_margin="2dp"
                android:padding="8dp"
                android:text="(Listeners are already attached in oncreate/ whenever variables are defined)"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/btServerReqFail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="app launch fail cannot be tested for now"
                android:textSize="12sp" />








        </GridLayout>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="global listener multiple time" />
                    <androidx.core.widget.NestedScrollView
                        android:layout_width="250dp"
                        android:layout_height="130dp"
                        android:fillViewport="true">

                        <TextView
                            android:id="@+id/tvTerminalWithGlobalListenerMultiple"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="8dp"
                            android:background="#fff"
                            android:minHeight="50dp"
                            android:textColor="#000"
                            android:textSize="9sp" />
                    </androidx.core.widget.NestedScrollView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="global listener one time" />
                    <androidx.core.widget.NestedScrollView
                        android:layout_width="250dp"
                        android:layout_height="130dp"
                        android:fillViewport="true">

                        <TextView
                            android:id="@+id/tvTerminalWithGlobalListenerOneTime"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="8dp"
                            android:background="#fff"

                            android:textColor="#000"
                            android:textSize="9sp" />
                    </androidx.core.widget.NestedScrollView>
                </LinearLayout>


            </LinearLayout>
        </HorizontalScrollView>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="value on demand" />

                    <androidx.core.widget.NestedScrollView
                        android:layout_width="250dp"
                        android:layout_height="130dp"
                        android:fillViewport="true">

                        <TextView
                            android:id="@+id/tvTerminalValueOnDemand"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="8dp"
                            android:background="#fff"
                            android:minHeight="50dp"
                            android:textColor="#000"
                            android:textSize="9sp" />
                    </androidx.core.widget.NestedScrollView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="individual listeners" />
                    <androidx.core.widget.NestedScrollView
                        android:layout_width="250dp"
                        android:layout_height="130dp"
                        android:fillViewport="true">

                        <TextView
                            android:id="@+id/tvTerminalWithIndividualListeners"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="8dp"
                            android:background="#fff"
                            android:minHeight="50dp"
                            android:textColor="#000"
                            android:textSize="9sp"/>
                    </androidx.core.widget.NestedScrollView>
                </LinearLayout>


            </LinearLayout>

        </HorizontalScrollView>













        <View
            android:layout_width="match_parent"
            android:layout_height="100dp" />


    </LinearLayout>


</androidx.core.widget.NestedScrollView>